    shapeConfig.collisionGroup = collision_group;
    shapeConfig.collisionMask = collision_mask;

    oimo_shape_init(&g_shapes[idx], &shapeConfig);
    oimo_rigid_body_add_shape(rb, &g_shapes[idx]);

